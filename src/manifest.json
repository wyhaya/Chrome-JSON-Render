{
  "name": "JSON-Render",
  "description": "View JSON in the Chrome browser",
  "version": "1.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "ico/16.png",
    "48": "ico/48.png",
    "128": "ico/128.png"
  },
  "content_scripts": [{
	  "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file:///*"],
    "js": ["render.js"],
    "css": ["render.css"],
	  "run_at" : "document_start",
	  "all_frames" : true
  }],
  "permissions" : ["clipboardWrite", "http://*/", "contextMenus", "https://*/", "ftp://*/"]
}
